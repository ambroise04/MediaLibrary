@model MediaLibrary.MVC5.Models.MediaVM

<div class="modal fade" id="media-edit-modal" tabindex="-1" role="dialog" aria-labelledby="centerTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">Edit media</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body edit-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark form-control" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-info form-control" id="btn-edit-media">Save</button>
            </div>
        </div>
    </div>
</div>