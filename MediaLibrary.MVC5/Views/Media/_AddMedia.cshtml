@model MediaLibrary.MVC5.Models.MediaVM

<div class="modal fade" id="media-modal" tabindex="-1" role="dialog" aria-labelledby="centerTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">New media</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="media-form" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="form-row">
                        <div class="col form-group">
                            <label for="formGroupExampleInput">Name</label>
                            <input type="text" class="form-control" placeholder="Media's name" name="Name">
                        </div>
                        <div class="col form-group">
                            <label for="formGroupExampleInput">Placement</label>
                            <input type="text" class="form-control" placeholder="Placement" name="Path">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col d-flex flex-column">
                            <label for="type">Type</label>
                            @Html.EnumDropDownListFor(model => model.Type, new { @class="custom-select form-control", @id="type", @name="Type" })
                        </div>
                        <div class="col d-flex flex-column">
                            <label for="type">Categories</label>
                            <div class="d-inline">
                                <select class="custom-select form-control" id="category" name="Category">
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                                <span><a href="@Url.Action("Create", "Category")" class="text-info"><i class="fas fa-plus ml-2"></i></a></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col form-group d-flex flex-column">
                            <label for="my-media">Media</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="my-media" name="file">
                                <label class="custom-file-label" for="my-media">Choose media</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark form-control" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-info form-control" id="btn-save-media">Save</button>
            </div>
        </div>
    </div>
</div>