@model MediaLibrary.MVC5.Models.MediaVM

<div class="modal fade" id="media-modal-delete" tabindex="-1" role="dialog" aria-labelledby="centerTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white" id="title">Delete confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this media ? </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark form-control" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-info form-control" id="btn-delete-media">Delete</button>
            </div>
        </div>
    </div>
</div>