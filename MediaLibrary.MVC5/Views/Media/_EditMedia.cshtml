@model MediaLibrary.MVC5.Models.MediaVM

@{ 
    var media = Model.Media;
}

    <form id="edit-media-form">
        @Html.AntiForgeryToken()
        <input type="hidden" value="@media.Id" name="Id" />
        <input type="hidden" value="@media.Url" name="Url" />
        <input type="hidden" value="@media.Done" name="Done" />
        <div class="form-row">
            <div class="col form-group">
                <label for="formGroupExampleInput">Name</label>
                <input type="text" class="form-control" placeholder="Media's name" name="Name" value="@media.Name">
            </div>
            <div class="col form-group">
                <label for="formGroupExampleInput">Placement</label>
                <input type="text" class="form-control" placeholder="Placement" name="Path" value="@media.Path">
            </div>
        </div>
        <div class="form-row">
            <div class="col d-flex flex-column">
                <label for="type">Type</label>
                @Html.EnumDropDownListFor(model => model.Type, new { @class = "custom-select form-control", @id = "type", @name = "Type" })
            </div>
            <div class="col d-flex flex-column">
                <label for="type">Categories</label>
                <select class="custom-select form-control" id="category" name="Category">
                    @foreach (var category in Model.Categories)
                    {
                        if (category.Id == media.Category.Id)
                        {
                            <option value="@category.Id" selected>@category.Name</option>
                        }
                        else
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
            </div>
        </div>
    </form>