@model IEnumerable<MediaLibrary.DAL.Entities.Category>

@{
    ViewBag.Title = "Categorirs";
}

<div class="jumbotron">
    <h1>My categories</h1>
</div>
<div class="row mb-lg-4 mb-sm-2">
    <div class="col-md-12 d-flex flex-lg-row flex-md-row justify-content-between flex-wrap">
        <p class=" my-2 my-lg-0">Add a new category ? @Html.ActionLink("New category", "Create", null, new { @class= "btn btn-rounded btn-outline-info" })</p>        
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>